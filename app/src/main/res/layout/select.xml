<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:background="#2C4FB6">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="34dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_arrow_left"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your cut"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Meat"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
       android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="280dp">

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="97dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/img_6" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="40dp"
            android:text="Curry cut with(skin)" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="60dp"
            android:text="Gross wt.approx.500g | Net wt. 500g" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="85dp"
            android:text="349.00 / 500g" />

        <ImageView
            android:id="@+id/custom"
            android:layout_width="97dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            app:srcCompat="@drawable/img_2" />

        <TextView
            android:id="@+id/custom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:textStyle="bold"
            android:layout_marginTop="220dp"
            android:text="Curry cut with(skin)" />

        <TextView
            android:id="@+id/custom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="240dp"
            android:text="Gross wt.approx.500g | Net wt. 500g" />

        <TextView
            android:id="@+id/custom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="260dp"
            android:text="349.00 / 500g" />

        <ImageView
            android:id="@+id/imageView36"
            android:layout_width="97dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/img_7" />

        <TextView
            android:id="@+id/fry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:textStyle="bold"
            android:layout_marginTop="120dp"
            android:text="Curry cut with(skin)" />

        <TextView
            android:id="@+id/fry1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="140dp"
            android:text="Gross wt.approx.500g | Net wt. 500g" />

        <TextView
            android:id="@+id/fry2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="160dp"
            android:text="349.00 / 500g" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textView32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Whole Fish"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/whole"
            android:layout_width="97dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/img_1" />

        <TextView
            android:id="@+id/whole1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="170dp"
            android:text="Whole (cleaned)"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/whole2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="40dp"
            android:text="Gross wt.approx.500g | Net wt. 500g" />

        <TextView
            android:id="@+id/notcleaned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="60dp"
            android:text="349.00 / 500g" />
        <ImageView
            android:id="@+id/notcleaned1"
            android:layout_width="97dp"
            android:layout_height="85dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/img_10" />

        <TextView
            android:id="@+id/notcleaned2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="170dp"
            android:text="Whole (not cleaned)"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/notcleaned3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="130dp"
            android:text="Gross wt.approx.500g | Net wt. 500g" />

        <TextView
            android:id="@+id/whole3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="150dp"
            android:text="349.00 / 500g" />
    </androidx.cardview.widget.CardView>
</LinearLayout>