<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:background="#2C4FB6">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="34dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_arrow_left"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My cart"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="277dp">

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="87dp"
            android:layout_height="92dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/img_10" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="40dp"
            android:text="Indian mackerel / Ayala /"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="60dp"
            android:text="Bangda / Aiyla(large)6+" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="85dp"
            android:text="Count/kg)" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#7E7878"
            android:text="Remove"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty : 2.25kg"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="70dp"/>

        <ImageView
            android:id="@+id/pink"
            android:layout_width="89dp"
            android:layout_height="111dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="130dp"
            app:srcCompat="@drawable/img_10" />

        <TextView
            android:id="@+id/perch"
            android:layout_width="169dp"
            android:layout_height="84dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="140dp"
            android:text="Pink Perch / Kilimeen /Sankara Meen /Thread Finned Bream (Large)(80g to 310g)"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/perch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="210dp"
            android:text="349.00 / 500g" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="130dp"
            android:backgroundTint="#7E7878"
            android:text="Remove"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty : 2.25kg"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="170dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final Price"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="280dp"
            android:text="0.769 * 580 = 446" />
        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coupon discount :"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="35dp"
            android:text="0" />
        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery charge :"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="60dp"
            android:text="FREE"
            android:textColor="#33852A"/>
        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Total"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="100dp"
            android:text="Rs. 468.00"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD PROMO CODE"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="50dp"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="169dp"
            android:text="Confirm Order"
            android:backgroundTint="#CA4C09"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>